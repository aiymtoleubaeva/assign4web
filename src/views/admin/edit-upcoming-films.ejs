<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Edit Film</title>
    <link rel="stylesheet" href="/styles/main.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container my-4">
    <h1>Edit Upcoming Film</h1>
    <form action="/upcoming-films/<%= film._id %>?_method=PUT" method="POST" class="mt-3">
        <div class="mb-3">
            <label for="titleEn" class="form-label">Title (EN):</label>
            <input type="text" class="form-control" id="titleEn" name="title[en]" value="<%= film.title.en %>" required>
        </div>

        <div class="mb-3">
            <label for="titleOther" class="form-label">Title (Other Language):</label>
            <input type="text" class="form-control" id="titleOther" name="title[other]" value="<%= film.title.other %>">
        </div>

        <div class="mb-3">
            <label for="descriptionEn" class="form-label">Description (EN):</label>
            <textarea class="form-control" id="descriptionEn" name="description[en]" required><%= film.description.en %></textarea>
        </div>

        <div class="mb-3">
            <label for="descriptionOther" class="form-label">Description (Other Language):</label>
            <textarea class="form-control" id="descriptionOther" name="description[other]"><%= film.description.other %></textarea>
        </div>

        <div class="mb-3">
            <label for="releaseDate" class="form-label">Release Date:</label>
            <input type="date" class="form-control" id="releaseDate" name="releaseDate" value="<%= film.releaseDate.toISOString().split('T')[0] %>" required>
        </div>

        <div class="mb-3">
            <label for="images" class="form-label">Image URLs (comma-separated):</label>
            <input type="text" class="form-control" id="images" name="images" value="<%= film.images.join(', ') %>" required>
        </div>

        <button type="submit" class="btn btn-primary">Update Film</button>
    </form>
</div>
</body>
</html>
