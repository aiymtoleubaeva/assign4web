<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles/main.css">
</head>
<body>
<%- include('../partials/header') %>
<div class="add-user-btn">
    <a href="/upcoming-films/admin" class="btn btn-primary">Manage Upcoming Films</a>
</div>
<div class="container mt-5">
    button
    <h2>Manage Users</h2>
    <div class="user-list">
        <table class="table">
            <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            <% users.forEach(function(user) { %>
                <tr>
                    <td><%= user.username %></td>
                    <td><%= user.email %></td>
                    <td><%= user.role %></td>
                    <td>
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                Actions
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                <li><a class="dropdown-item" href="/admin/users/<%= user._id %>">View</a></li>
                                <li><a class="dropdown-item" href="/admin/users/<%= user._id %>/edit">Edit</a></li>
                                <li>
                                    <form action="/admin/users/<%= user._id %>?_method=DELETE" method="POST" style="display: inline;">
                                        <button type="submit" class="dropdown-item">Delete</button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </td>
                </tr>
            <% }); %>
            </tbody>
        </table>
    </div>
    <div class="add-user-btn">
        <a href="/admin/users/add" class="btn btn-primary">Add User</a>
    </div>
</div>

<div class="container mt-5">
    <h3>Deleted Users</h3>
    <table class="table">
        <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Creation Date</th>
            <th>Deletion Date</th>
        </tr>
        </thead>
        <tbody>
        <% deletedUsers.forEach(function(user) { %>
            <tr>
                <td><%= user.username %></td>
                <td><%= user.email %></td>
                <td><%= new Date(user.creationDate).toLocaleString() %></td>
                <td><%= new Date(user.deletionDate).toLocaleString() %></td>
            </tr>
        <% }); %>
        </tbody>
    </table>
</div>

<footer>

</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
